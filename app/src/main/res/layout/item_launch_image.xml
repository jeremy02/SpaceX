<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".main.ui.fragments.LaunchesListFragment"
    tools:ignore="MissingPrefix,RtlCompat,UselessParent,RtlSymmetry,RtlHardcoded,HardcodedText,UnusedAttribute,RelativeOverlap,ContentDescription">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dimen_48"
        android:paddingEnd="@dimen/dimen_16"
        android:paddingStart="@dimen/dimen_16"
        android:paddingBottom="@dimen/dimen_48"
        android:layout_margin="@dimen/dimen_16">

        <androidx.cardview.widget.CardView
            android:id="@+id/list_item_background_cardView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:visibility="gone"
            app:cardUseCompatPadding="true"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/list_item_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.05"
                app:srcCompat="@drawable/ic_rocket" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/list_item_icon_cardView"
            android:layout_width="116dp"
            android:layout_height="116dp"
            android:visibility="visible"
            app:cardUseCompatPadding="false"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/list_item_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</layout>